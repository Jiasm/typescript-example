{
  "name": "typescript-example",
  "version": "1.0.0",
  "description": "example for typescript, with decorators (routing-controllers and sequelize)",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=local npm run serve",
    "build": "npm run build-ts && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "NODE_ENV=local nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copy-static-assets.ts",
    "test": "mocha -r ts-node/register test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jiasm/typescript-example.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "consolidate": "^0.15.1",
    "ejs": "^2.6.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-multer": "^1.0.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.4",
    "mysql2": "^1.5.3",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "sequelize": "^4.38.0",
    "sequelize-typescript": "^0.6.5"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-http": "^3.0.5",
    "@types/consolidate": "0.0.34",
    "@types/core-js": "^2.5.0",
    "@types/jest": "^23.1.3",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.0",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-router": "^7.0.30",
    "@types/koa-static": "^4.0.0",
    "@types/koa-views": "^2.0.3",
    "@types/mocha": "^5.2.5",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.5.1",
    "@types/shelljs": "^0.8.0",
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "eslint": "^5.4.0",
    "eslint-config-blued-typescript": "0.0.12",
    "eslint-import-resolver-typescript": "^1.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-typescript": "^0.12.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "shelljs": "^0.8.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "typescript-eslint-parser": "^18.0.0"
  }
